# Finance Multi-Service App Environment Variables
# Copy this file to .env and customize for your environment

# Database Configuration
POSTGRES_USER=finance
POSTGRES_PASSWORD=financepass
POSTGRES_DB=finance_db
DATABASE_URL=postgresql://finance:financepass@db:5432/finance_db

# Flask Backend Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=1

# Worker Configuration
WORKER_INTERVAL=300  # Data collection interval in seconds (5 minutes)
MAX_TICKERS=50       # Maximum number of tickers to monitor
NEWS_ARTICLES_PER_TICKER=5  # Number of news articles to fetch per ticker

# Dashboard Configuration
BACKEND_URL=http://backend:5000
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# API Rate Limiting
API_RATE_LIMIT=100  # Requests per minute per IP

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External API Keys (optional - for enhanced features)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
# FINNHUB_API_KEY=your_finnhub_key
# NEWS_API_KEY=your_news_api_key

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=0
# DATABASE_URL=postgresql://prod_user:secure_password@db:5432/finance_db
# POSTGRES_PASSWORD=secure_production_password